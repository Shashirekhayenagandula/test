      username="${sf.UATUserName}" 
                password="${sf.UATPassword}" 
                serverurl="${sf.SBUrl}" 
        recentValidationId = "0Af8A00001Cde9pSAB"
        />
    </target>
    <target name="deploy">
        <sf:deploy 
                username="${sf.UATUserName}" 
                password="${sf.UATPassword}" 
                serverurl="${sf.SBUrl}" 
                maxPoll="${sf.maxPoll}" 
                deployRoot="src" />
    </target>
    <target name="testfew">
